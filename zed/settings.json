  "buffer_font_family": "Maple Mono NF", // Victor Mono italic looks cursed. Maple Mono works better in general.
  "terminal": {
    "font_family": "Maple Mono NF"
  },
  "tab_bar": {
    "show": false
  },
  "minimap": {
    "show": "auto"
  },
  "auto_indent_on_paste": true,
  "telemetry": {
    "diagnostics": false,
    "metrics": false
  },
  "vim_mode": true,
  "base_keymap": "VSCode",
  "ui_font_size": 16,
  "buffer_font_size": 20.0,
  "theme": {
    "mode": "system",
    "light": "One Light",
    "dark": "Cursor Dark"
  },
  "cursor_blink": false
