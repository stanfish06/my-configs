general {
    output_format = "i3bar"
    interval = 1
}

order += "wireless _first_"
order += "ethernet _first_"
order += "cpu_usage"
order += "memory"
order += "tztime local"

wireless _first_ {
    format_up = "W: (%quality at %essid) %ip"
    format_down = "W: down"
}

ethernet _first_ {
    format_up = "E: %ip"
    format_down = "E: down"
}

cpu_usage {
    format = "CPU: %usage"
}

memory {
    format = "RAM: %used/%total"
}

tztime local {
    format = "%Y-%m-%d %H:%M:%S"
}

